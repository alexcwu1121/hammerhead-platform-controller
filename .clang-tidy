Checks: >
  -*,
  bugprone-*,
  cert-*,
  cppcoreguidelines-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,

  # Enable some clang-analyzer checks
  clang-analyzer-core*,
  clang-analyzer-cplusplus*,
  clang-analyzer-security*,
  clang-analyzer-unix*,

  # Explicitly re-enable common useful ones
  misc-unused-using-decls,
  misc-redundant-expression

WarningsAsErrors: >
  bugprone-*,
  clang-analyzer-*,
  performance-*,
  cert-*,

HeaderFilterRegex: '.*'

AnalyzeTemporaryDtors: true
FormatStyle: none

CheckOptions:
  - key:             modernize-use-nullptr.NullMacros
    value:           'NULL'
  - key:             modernize-use-nullptr.IgnoreMacros
    value:           'true'
  - key:             readability-function-cognitive-complexity.Threshold
    value:           '40'
  - key:             readability-identifier-naming.VariableCase
    value:           lower_case

# Ignore autogenerated code
#ExcludePaths: '.*(Drivers/|Middlewares/).*'
